<p id="notice"><%= notice %></p>

<h1>Students</h1>
<a class="btn btn-primary" href="https://github.com/Neeff/second_app">Link al Proyecto en Github</a>

<table class ="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
        <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="table-primary">
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= link_to 'Show', student, class:'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning'%></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path ,class:'btn btn-success' %>
